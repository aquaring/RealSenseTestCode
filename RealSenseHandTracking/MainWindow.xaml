        <Image x:Name="waveGestureImage" HorizontalAlignment="Left" Height="310" Margin="28,701,0,0" VerticalAlignment="Top" Width="321" Source="images/wave.png"/>

        <Label x:Name="GestureLabel" Content="Gesture" HorizontalAlignment="Left" Margin="60,685,0,0" VerticalAlignment="Top" Width="691" FontSize="20"/>
        <Label Content="Gesture" HorizontalAlignment="Left" Margin="28,650,0,0" VerticalAlignment="Top" Width="417" FontSize="20"/>
    </Grid>
</Window>
