        <Image x:Name="swipe_leftGestureImage" HorizontalAlignment="Left" Height="310" Margin="28,701,0,0" VerticalAlignment="Top" Width="321" Source="images/swipe_left.png"/>
        <Image x:Name="swipe_rightGestureImage" HorizontalAlignment="Left" Height="310" Margin="28,701,0,0" VerticalAlignment="Top" Width="321" Source="images/swipe_down.png"/>
        <Image x:Name="swipe_upGestureImage" HorizontalAlignment="Left" Height="310" Margin="28,701,0,0" VerticalAlignment="Top" Width="321" Source="images/swipe_up.png"/>
        <Image x:Name="tapGestureImage" HorizontalAlignment="Left" Height="310" Margin="28,701,0,0" VerticalAlignment="Top" Width="321" Source="images/tap.png"/>
