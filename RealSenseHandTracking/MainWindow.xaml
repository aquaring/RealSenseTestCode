        <Image x:Name="clickGestureImage" HorizontalAlignment="Left" Height="310" Margin="28,701,0,0" VerticalAlignment="Top" Width="321" Source="images/click.png"/>
        <Image x:Name="fistGestureImage" HorizontalAlignment="Left" Height="310" Margin="28,701,0,0" VerticalAlignment="Top" Width="321" Source="images/fist.png"/>
